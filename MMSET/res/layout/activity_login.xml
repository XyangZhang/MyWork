<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/title_bar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="信息输入"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/frame"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@null"
            android:hint="请输入你的姓名" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#dddddd" />

        <EditText
            android:id="@+id/age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:hint="请输入你的年龄" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/frame"
        android:paddingBottom="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别" 
            android:textSize="19sp"/>

        <ImageView 
            android:id="@+id/sex_man"
            android:layout_width="22dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/textView1"
            android:layout_centerVertical="true"
            android:src="@drawable/option_no"/>
        
        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sex_man"
            android:text="男" 
            android:textSize="19sp"/>
        
        <ImageView 
            android:id="@+id/sex_woman"
            android:layout_width="22dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/man"
            android:layout_centerVertical="true"
            android:src="@drawable/option_no"/>
        
        <TextView
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sex_woman"
            android:text="女" 
            android:textSize="19sp"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/frame"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文化程度" 
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/degree_1"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/textView2"
            android:src="@drawable/option_no" />
        
        <TextView
            android:id="@+id/below_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/degree_1"
            android:text="未上过学" 
            android:textSize="19sp"/>
        
        <ImageView
            android:id="@+id/degree_2"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_below="@+id/degree_1"
            android:layout_alignLeft="@+id/degree_1"
            android:layout_marginTop="5dip"
            android:src="@drawable/option_no" />
        <TextView
            android:id="@+id/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/degree_2"
            android:layout_below="@+id/degree_1"
            android:layout_marginTop="5dip"
            android:text="小学文化" 
            android:textSize="19sp"/>
        
        <ImageView
            android:id="@+id/degree_3"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:layout_below="@+id/degree_2"
            android:layout_alignLeft="@+id/degree_2"
            android:layout_marginTop="5dip"
            android:src="@drawable/option_no" />
        <TextView
            android:id="@+id/above_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/degree_3"
            android:layout_below="@+id/degree_2"
            android:layout_marginTop="5dip"
            android:text="初中及以上" 
            android:textSize="19sp"/>

     </RelativeLayout>
    
    <Button 
            android:id="@+id/login_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="登          录"
            android:background="@drawable/confirm_button_1"/>

</LinearLayout>