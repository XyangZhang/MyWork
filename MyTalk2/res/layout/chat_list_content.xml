<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="7dip"
    android:paddingBottom="7dip"
    android:background="#77ffffff">
    
    <ImageView 
        android:id="@+id/chat_list_picture"
        android:layout_height="70dip"
        android:layout_width="70dip"
        android:layout_centerVertical="true"
        android:src="@drawable/my_pic"/>
    
    <TextView 
        android:id="@+id/chat_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_list_picture"
        android:layout_marginLeft="10dip"
        android:textSize="20sp"
        android:text="hoom"/>

    <TextView 
        android:id="@+id/chat_list_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_list_name"
        android:layout_below="@+id/chat_list_name"
        android:layout_marginTop="5dip"
        android:textColor="#777777"
        android:textSize="19sp"
        android:text="hello world !"/>
    
    <TextView
        android:id="@+id/chat_list_time"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_list_name"
        android:layout_alignParentRight="true"
        android:textColor="#999999"
        android:textSize="15sp"
        android:text="today"/>
    
</RelativeLayout>
